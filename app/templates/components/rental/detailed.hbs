<article class='rental detailed'>
  <div>
    <p>Nice find! This looks like a nice place to stay near
      {{@rental.attributes.city}}.</p>

    <ShareButton
      @text='Check out {{@rental.title}} on Super Rentals!'
      @hashtags='vacation,travel,authentic,blessed,superrentals'
      @via='emberjs'
    >
      Share on Twitter
    </ShareButton>
  </div>

  <Rental::Image
    src={{@rental.attributes.image}}
    alt='A picture of {{@rental.attributes.title}}'
  />

  <div class='details'>
    <h3>About {{@rental.attributes.title}}</h3>

    <div class='detail owner'>
      <span>Owner:</span>
      {{@rental.attributes.owner}}
    </div>

    <div class='detail type'>
      <span>Type:</span>
      {{@rental.attributes.type}}
      â€“
      {{@rental.attributes.category}}
    </div>

    <div class='detail location'>
      <span>Location:</span>
      {{@rental.attributes.city}}
    </div>

    <div class='detail bedrooms'>
      <span>Number of bedrooms:</span>
      {{@rental.attributes.bedrooms}}
    </div>

    <div class='detail description'>
      <p>{{@rental.attributes.description}}</p>
    </div>
  </div>
</article>