<article class='rental'>
  <Rental::Image
    src={{@rental.attributes.image}}
    alt='A picture of {{@rental.attributes.title}}'
  />

  <div class='details'>
    <h3>
      <LinkTo @route='rental' @model={{@rental}}>
        {{@rental.attributes.title}}
      </LinkTo>
    </h3>

    <div class='detail'>
      <span>Id:</span>
      {{@rental.id}}
    </div>

    <div class='detail owner'>
      <span>Owner:</span>
      {{@rental.attributes.owner}}
    </div>

    <div class='detail type'>
      <span>Type:</span>
      {{@rental.type}}
    </div>

    <div class='detail bedrooms'>
      <span>Number of bedrooms:</span>
      {{@rental.attributes.bedrooms}}
    </div>
  </div>
</article>